# Cortex Ops Configuration
# Copy to .env and fill in your values

# Debug mode
CORTEX_DEBUG=false

# Logging
CORTEX_LOG_LEVEL=INFO

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-api-key

# Default LLM connector
CORTEX_CONNECTORS__DEFAULT=openai

# Custom models (optional)
CORTEX_CONNECTORS__OPENAI_MODEL=gpt-4-turbo-preview
CORTEX_CONNECTORS__ANTHROPIC_MODEL=claude-3-opus-20240229
CORTEX_CONNECTORS__GOOGLE_MODEL=gemini-pro
