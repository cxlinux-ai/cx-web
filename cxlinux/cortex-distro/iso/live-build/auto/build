set -e

echo "================================================"
echo "  CX Linux ISO Build"
echo "  Started: $(date)"
echo "================================================"

# Run the build
lb build noauto "${@}"

BUILD_STATUS=$?

echo "================================================"
echo "  Build completed: $(date)"
echo "  Status: ${BUILD_STATUS}"
echo "================================================"

exit ${BUILD_STATUS}
